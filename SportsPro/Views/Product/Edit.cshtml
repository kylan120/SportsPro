@model Product

@{
    string title = ViewBag.Action + "Products";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YearlyPrice">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>

    <input type="hidden" asp-for="ProductID" />

    <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="List">Save</button>
    <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
