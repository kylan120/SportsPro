@model List<Product>
@{
    ViewBag.Title = "Products";
}

<h2>@ViewBag.Title</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var products in Model)
        {
            <tr>
                <td>@products.ProductCode</td>
                <td>@products.Name</td>
                <td>@products.YearlyPrice</td>
                <td>@products.ReleaseDate</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@products.ProductID" 
                    class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@products.ProductID"
                    class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>