@model IncidentManagerViewModel

@{
    
    ViewBag.Title = "Edit Incident";
}

<h2>@ViewBag.Title</h2>

<form asp-action="TechnicianEdit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <main class="container pl-0">
        <div class="row mb-3">
            <div class="col-4">Technician:</div>
            <div class="col-8">@Model.Technician.Name</div>
        </div>

        <div class="row mb-3">
            <div class="col-4">Customer:</div>
            <div class="col-8">@Model.Customer.FullName</div>
        </div>

        <div class="row mb-3">
            <div class="col-4">Product:</div>
            <div class="col-8">@Model.Product.Name</div>
        </div>

        <div class="row mb-3">
            <div class="col-4">Title:</div>
            <div class="col-8">@Model.Title</div>
        </div>

        <div class="row mb-3">
            <div class="col-4">Date Opened:</div>
            <div class="col-8">@Model.DateOpened</div>
        </div>
    </main>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" class="form-control" />
    </div>

    <input type="hidden" asp-for="IncidentID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <form method="get" asp-controller="Incident" asp-action="ListByTech">
        <button type="submit" class="btn btn-primary">Cancel</button>
    </form>
</form>